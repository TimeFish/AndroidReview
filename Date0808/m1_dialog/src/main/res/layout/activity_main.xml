<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xy.m1_dialog.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标准对话框"
        android:onClick="onAlertDialog"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="列表型对话框"
        android:onClick="onListDialog"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义对话框"
        android:onClick="onCustomDialog"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进度条对话框"
        android:onClick="onProgressDialog"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进度条对话框"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="onProgressDialog2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间对话框"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="onDateDialog"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单选对话框"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="onRadioDialog"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="复选对话框"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="onCheckboxDialog"/>
</LinearLayout>
